<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="@string/analysis"
        android:textSize="20sp"
        android:textColor="@color/nameOnBoard_color"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/nameOnBoard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/subscription_onboard"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameOnBoard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        android:textColor="@color/AfternameOnBoard_color"
        android:text="@string/sample_collection"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageOnOnboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="60dp"
        android:scaleType="center"
        android:src="@drawable/img_onboard1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>