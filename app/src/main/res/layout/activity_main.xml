<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/skip"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/skip"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/skip_color"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toRightOf="@id/skip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_marginBottom="40dp"
        android:text="@string/analysis"
        android:textSize="20sp"
        android:textColor="@color/nameOnBoard_color"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/nameOnBoard"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/post_cript"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameOnBoard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        android:textColor="@color/AfternameOnBoard_color"
        android:text="@string/sample_collection"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/current_page"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/post_cript"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="9dp"
            android:src="@drawable/board_true" />
        <ImageView
            android:src="@drawable/board_false"
            android:layout_marginRight="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/board_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:scaleType="center"
        app:layout_constraintTop_toBottomOf="@id/current_page"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img_onboard1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

