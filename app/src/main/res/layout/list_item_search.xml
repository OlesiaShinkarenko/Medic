<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/name_analysis"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_marginRight="66dp"
        app:layout_constraintRight_toLeftOf="@+id/price_analysis"
        android:layout_height="wrap_content"/>
<TextView
    android:textColor="@color/black"
    android:id="@+id/price_analysis"
    android:layout_marginTop="12dp"
    android:textSize="17sp"
    android:layout_marginRight="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/AfternameOnBoard_color"
        android:id="@+id/time_analysis"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/price_analysis"
        app:layout_constraintRight_toRightOf="@id/price_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>