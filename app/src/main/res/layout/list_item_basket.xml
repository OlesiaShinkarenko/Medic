<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16sp"
            android:textColor = "@color/black"
            android:id="@+id/name_analysis"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:padding="7dp"
            android:background="@android:color/transparent"
            android:id="@+id/remove_analysis"
            android:src="@drawable/icon_cancel"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="bottom"
            android:id="@+id/price_analysis"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="@id/name_analysis"
            app:layout_constraintTop_toBottomOf="@id/name_analysis"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="0dp"/>
        <TextView
            android:gravity="bottom"
            android:textSize="15sp"
            android:textColor = "@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/kol_patient_analysis"
            android:layout_marginTop = "40dp"
            app:layout_constraintTop_toBottomOf="@id/name_analysis"
            app:layout_constraintRight_toLeftOf="@id/linearlayout"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="22dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <LinearLayout
            android:background="@drawable/buttons_basket_style"
            android:padding="6dp"
            android:id="@+id/linearlayout"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop = "54dp"
            app:layout_constraintTop_toBottomOf="@id/remove_analysis"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:dividerPadding="6dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <ImageButton
                android:id="@+id/remove_patient"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/add_patient"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>