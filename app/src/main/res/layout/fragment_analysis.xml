<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnalysisFragment.AnalysisFragment"
    android:id="@+id/swipe_refresh_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">
            <EditText
                android:focusable="false"
                android:layout_marginHorizontal="20dp"
                android:padding="14dp"
                android:background="@drawable/edittext_style"
                android:id="@+id/search_analysis"
                android:drawableLeft="@drawable/search_icon"
                android:layout_width="match_parent"
                android:drawablePadding="8dp"
                android:textColorHint="@color/AfternameOnBoard_color"
                android:hint="@string/search_analysis"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:id="@+id/discount_and_news"
                android:textSize="17sp"
                android:textColor="@color/AfternameOnBoard_color"
                android:text="@string/discount_and_news"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="20dp"
                android:id="@+id/recycle_view_banners"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginHorizontal="20dp"
                android:id="@+id/catalog_analysis"
                android:textColor="@color/AfternameOnBoard_color"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="@string/catalog_analysis"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="20dp"
                android:id="@+id/recycle_view_catalog_name"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="24dp"
                android:id="@+id/recycle_view_catalog"
                android:layout_width="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/basket_relativelayout"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <LinearLayout
              android:id="@+id/in_basket"
              android:layout_marginVertical="24dp"
              android:layout_marginHorizontal="20dp"
              android:background="@drawable/button_add_style"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_marginVertical="18dp"
                  android:layout_marginHorizontal="16dp"
                  android:src="@drawable/icon_basket"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:textStyle="bold"
                  android:textSize="17sp"
                  android:textColor="@color/white"
                  android:text="@string/in_basket"
                  android:layout_marginLeft="16dp"
                  android:layout_marginVertical="16dp"
                  android:layout_weight="3"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/sum_basket"
                  android:textStyle="bold"
                  android:textColor="@color/white"
                  android:textSize="17sp"
                  android:layout_marginRight="16dp"
                  android:layout_marginVertical="16dp"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
