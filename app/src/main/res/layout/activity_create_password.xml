<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePasswordActivity">
<TextView
    android:id="@+id/skip"
    android:layout_width="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:text="@string/skip"
    android:textColor="@color/button_true_enabled"
    android:textSize="15sp"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/create_password_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skip"
        android:layout_marginTop="40dp"
        android:text="@string/create_password"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/safe_text"
        app:layout_constraintTop_toBottomOf="@id/create_password_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:text="@string/text_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/current_page_create_password_activity"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/safe_text"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/create_password_true" />
        <ImageView
            android:src="@drawable/create_password_false"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="12dp"
            android:src="@drawable/create_password_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/create_password_false" />
    </LinearLayout>
    <TableLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/current_page_create_password_activity"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="44dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TableRow android:layout_marginBottom="24dp">

            <Button
                android:textSize="24sp"
                android:textColor="@color/black"
            android:background="@drawable/button_number_style"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:layout_marginRight="24dp"
                android:text="@string/one"
                />
            <Button
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:background="@drawable/button_number_style"
                android:minHeight="80dp"
                android:text="@string/two"
                android:layout_marginRight="24dp"
                />
            <Button
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:background="@drawable/button_number_style"
                android:minHeight="80dp"
                android:text="@string/three"
                />
        </TableRow>
        <TableRow android:layout_marginBottom="24dp">
            <Button
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:background="@drawable/button_number_style"
                android:minHeight="80dp"
                android:text="@string/four"
                android:layout_marginRight="24dp"
                />
            <Button
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:background="@drawable/button_number_style"
                android:minHeight="80dp"
                android:layout_marginRight="24dp"
                android:text="@string/five"
                />

               <Button
                   android:layout_weight="1"
                   android:textSize="24sp"
                   android:textColor="@color/black"
                   android:background="@drawable/button_number_style"
                   android:minHeight="80dp"
                android:text="@string/six"
                />

        </TableRow>
      <TableRow android:layout_marginBottom="24dp">
         <Button
             android:layout_weight="1"
             android:textSize="24sp"
          android:text="@string/seven"
             android:textColor="@color/black"
             android:background="@drawable/button_number_style"
             android:minHeight="80dp"
             android:layout_marginRight="24dp"
          />
          <Button
              android:layout_weight="1"
              android:textSize="24sp"
              android:text="@string/eight"
              android:textColor="@color/black"
              android:background="@drawable/button_number_style"
              android:minHeight="80dp"
              android:layout_marginRight="24dp"
              />
          <Button
              android:layout_weight="1"
              android:textSize="24sp"
              android:textColor="@color/black"
              android:background="@drawable/button_number_style"
              android:minHeight="80dp"
              android:text="@string/nine"
              />
      </TableRow>
       <TableRow>
           <Button
               android:layout_weight="1"
               android:textSize="24sp"
               android:textColor="@color/black"
               android:background="@drawable/button_number_style"
               android:minHeight="80dp"
               android:layout_marginRight="24dp"
               android:layout_column="1"
               android:text="@string/zero"
               />
           <ImageButton
               android:layout_weight="1"
               android:layout_gravity="center_vertical"
           android:layout_column="2"
               android:background="@android:color/transparent"
               android:minHeight="24dp"
           android:src="@drawable/delete"
           />
       </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>