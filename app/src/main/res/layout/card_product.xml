<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/card_product_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_marginRight="44dp"
            android:id="@+id/name_analysis"
            app:layout_constraintRight_toLeftOf="@id/cancel"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:padding="7dp"
            android:background="@drawable/icon_cancel_style"
            android:id="@+id/cancel"
            android:src="@drawable/icon_cancel"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview_description"
            app:layout_constraintTop_toBottomOf="@id/name_analysis"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="@color/AfternameOnBoard_color"
            android:text="@string/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/description_analysis"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview_preparation"
            android:text="@string/preparation"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/AfternameOnBoard_color"
            app:layout_constraintTop_toBottomOf="@id/description_analysis"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/preparation_analysis"
            app:layout_constraintTop_toBottomOf="@id/textview_preparation"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toBottomOf="@id/preparation_analysis"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/AfternameOnBoard_color"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="@string/results_in"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/AfternameOnBoard_color"
                android:textSize="14sp"
                android:text="@string/bio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/result_analysis"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/bio_analysis"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Button
            android:text="@string/add_with"
            android:id="@+id/button_add"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/linearlayout2"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_style"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>