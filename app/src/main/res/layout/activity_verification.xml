<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification.VerificationActivity">
    <ImageButton
        android:background="@drawable/button_arrow_style"
        android:src="@drawable/arrow_back"
        android:padding="11dp"
        android:id="@+id/btn_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        android:layout_marginTop="132dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:text="@string/code_verification"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_edit_code"
        android:layout_marginHorizontal="68dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:maxLength="1"
            android:id="@+id/number1"
            android:inputType="number"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/number2"
            android:inputType="number"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/number3"
            android:inputType="number"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/number4"
            android:inputType="number"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/return_code"
        android:textAlignment="center"
        android:text="@string/code_again"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_edit_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>