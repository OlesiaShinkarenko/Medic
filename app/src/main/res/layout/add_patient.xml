<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_marginRight="44dp"
        android:id="@+id/name"
        android:text="@string/select_patient"
        app:layout_constraintRight_toLeftOf="@id/cancel"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:padding="7dp"
        android:background="@drawable/icon_cancel_style"
        android:id="@+id/cancel"
        android:src="@drawable/icon_cancel"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_patient"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:textSize="15sp"
        android:id="@+id/add_patient_patient_case"
        android:textColor="@color/button_true_enabled"
        android:textAllCaps="false"
        android:text="@string/add_patient_1"
        android:background="@drawable/button_add_patient"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/recycle_view_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:enabled="false"
        android:text="@string/confirm_address"
        android:id="@+id/button_add_patient"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/add_patient_patient_case"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_style"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>