<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/profile_title"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="17dp"
            android:text="@string/profile_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/profile_image"
            android:scaleType="center"
            android:src="@drawable/profile_default"
            android:background="@drawable/profile_image_style"
            android:layout_marginTop="7dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/without_card_text"
            android:textColor="@color/AfternameOnBoard_color"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:text="@string/without_card_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/result_analysis_text"
            android:textSize="14sp"
            android:textColor="@color/AfternameOnBoard_color"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/result_analysis_text"
            app:layout_constraintTop_toBottomOf="@id/without_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/result_analysis_text"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_style"
                android:padding="14dp"
                android:id="@+id/editText_name"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_style"
                android:padding="14dp"
                android:id="@+id/editText_lastname"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_style"
                android:padding="14dp"
                android:id="@+id/editText_surname"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_style"
                android:padding="14dp"
                android:id="@+id/editText_date_birthday"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:textSize="20sp"
                android:entries="@array/list_gender"
                android:background="@drawable/spinner_style"
                android:id="@+id/spinner_gender"
                android:layout_marginTop="24dp"
                android:spinnerMode="dropdown"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_create_card"
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:text="@string/save_profile"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:enabled="false"
                android:textColor="@color/white"
                android:background= "@drawable/button_style"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="13dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
